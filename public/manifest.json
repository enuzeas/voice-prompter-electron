{
    "manifest_version": 3,
    "name": "Focus Prompter - Presentation Side Panel",
    "version": "1.0.0",
    "description": "Voice-activated teleprompter in your side panel.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "512": "icons/icon512.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}